

<%= form_tag( stores_path, :method => "get", role:"search") do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], placeholder: "Search City" ,class:"form-control", :required => "true" %>
        <span class="input-group-btn">
         <%= submit_tag "Search", :name => nil,class: 'btn btn-default' %>

        </span>
      </div>
<% end %>


<% if  @downcased.include? "#{params[:search].downcase}" %>
<h1>Stores</h1>

<table class="table table-striped ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Street</th>
      <th>City</th>
      <th>Zip</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.street %></td>
        <td><%= store.city %></td>
        <td><%= store.zip %></td>
        <td><%= store.phone %></td>
        <td><%= store.website %></td>
        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<%= render 'components/jumbotron' %>
<% end %>
<br>

<%= link_to 'New Store', new_store_path %>
